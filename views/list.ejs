

<%- include("header") -%>

        <div class="box" id="heading">
            <h1><%= kindOfDay %></h1>
        </div>

        <div class="box">
            <% listOfItems.forEach(item => { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item %></p>
            </div>
            <% }); %>

            <form class="item" action="/" method="post">
                <input type="text" name="newTask" placeholder="New Task" autocomplete="off">
                <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
            </form>
        </div>

<%- include("footer") -%>